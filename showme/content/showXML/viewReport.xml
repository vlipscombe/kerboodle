<?xml version="1.0" encoding="iso-8859-1"?>
 <topic>
	<topicTitle>Viewing Reports</topicTitle>
	<topicDialog><![CDATA[For more in-depth reports on your students' marks and results, you can use the <b>Reports</b> section.]]></topicDialog>
	<steps>
		<step>
			<stepTitle>Access the course</stepTitle>
			<stepTextTip><![CDATA[Once logged into Kerboodle, access the course to which your students are assigned.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/ViewReport1.png</stepScreen>
			<stepHotspot>8,118,97,132</stepHotspot>	
		</step>
		<step>
			<stepTitle>Reports</stepTitle>
			<stepTextTip><![CDATA[Click on the <b>Reports</b> button.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/ViewReport2.png</stepScreen>
			<stepHotspot>8,99,134,118</stepHotspot>	
		</step>
		<step>
			<stepTitle>Select Report</stepTitle>
			<stepTextTip><![CDATA[Using the <b>drop down arrow</b>, select which type of report you would like to view.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/ViewReport3.png</stepScreen>
			<stepHotspot>57,152,174,161</stepHotspot>	
		</step>
		<step>
			<stepTitle>Access the course</stepTitle>
			<stepTextTip><![CDATA[<p>Click on the options in the left hand panel to display their details on the right hand side.</p><p>Then click on the <b>Report</b> icon for the full report.</p>]]></stepTextTip>
			<stepScreen>content/showImages/teachers/ViewReport4.png</stepScreen>
			<stepHotspot>535,278,550,293</stepHotspot>	
		</step>
		<step>
			<stepTitle>Report Opens</stepTitle>
			<stepTextTip><![CDATA[The report will open in a new window. ]]></stepTextTip>
			<stepScreen>content/showImages/teachers/ViewReport5.png</stepScreen>
			<stepHotspot></stepHotspot>	
		</step>
	</steps>	
 </topic>