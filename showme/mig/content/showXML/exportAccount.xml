			<stepScreen>content/showImages/teachers/AdminEditImport1.png</stepScreen>
			<stepHotspot>332,12,417,28</stepHotspot>	
		</step>
		<step>
			<stepTitle>Export Accounts</stepTitle>
			<stepTextTip><![CDATA[Click on the <b>Export Accounts</b> button.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/AdminEditImport2.png</stepScreen>
			<stepHotspot>171,128,237,141</stepHotspot>	
