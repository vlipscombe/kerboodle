<?xml version="1.0" encoding="iso-8859-1"?>
 <topic>
	<topicTitle>Export Reports</topicTitle>
	<topicDialog><![CDATA[You can export students' marks and results in the <b>Reports</b> section.]]></topicDialog>
	<steps>
		<step>
			<stepTitle>Access the course</stepTitle>
			<stepTextTip><![CDATA[Once logged into Kerboodle, access the course to which your students are assigned.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport1.png</stepScreen>
			<stepHotspot>8,139,79,148</stepHotspot>	
		</step>
		<step>
			<stepTitle>Reports</stepTitle>
			<stepTextTip><![CDATA[Click on the <b>Reports</b> button.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport2.png</stepScreen>
			<stepHotspot>8,132,134,153</stepHotspot>	
		</step>
		<step>
			<stepTitle>Select Report type</stepTitle>
			<stepTextTip><![CDATA[<p>Using the <b>drop down arrow</b>, select which type of report you would like to view.</p> <p>You can only export Teaching Group and Course reports.</p>]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport3.png</stepScreen>
			<stepHotspot>55,106,176,149</stepHotspot>	
		</step>
		<step>
			<stepTitle>Select Report</stepTitle>
			<stepTextTip><![CDATA[<p>Click on the options in the left hand panel to display their details on the right hand side.</p><p>Then click on the <b>Report</b> icon for the full report.</p>]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport4.png</stepScreen>
			<stepHotspot>534,168,546,181</stepHotspot>	
		</step>
		<step>
			<stepTitle>Report Opens</stepTitle>
			<stepTextTip><![CDATA[Click on <b>Export</b>.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport5.png</stepScreen>
			<stepHotspot>6,349,31,359</stepHotspot>	
		</step>
		<step>
			<stepTitle>Report Opens</stepTitle>
			<stepTextTip><![CDATA[Select the export type from the <b>drop-down</b> menu.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport6.png</stepScreen>
			<stepHotspot>234,264,335,307</stepHotspot>	
		</step>
		<step>
			<stepTitle>Report Opens</stepTitle>
			<stepTextTip><![CDATA[Select <b>Save file</b> then click <b>OK</b>.]]></stepTextTip>
			<stepScreen>content/showImages/teachers/reportExport7.png</stepScreen>
			<stepHotspot></stepHotspot>	
		</step>
	</steps>	
 </topic>