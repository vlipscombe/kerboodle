<?xml version="1.0" encoding="iso-8859-1"?>
 <topic>
	<topicTitle>Viewing the Kerboodle Library resources</topicTitle>
	<topicDialog><![CDATA[<p>The Kerboodle resources are stored in the course <b>Library</b>.</p>]]></topicDialog>
	<steps>
		<step>
			<stepTitle>Access the Course</stepTitle>
			<stepTextTip><![CDATA[<p>Once logged into Kerboodle, access your course by clicking on the <b>course name</b> on your homepage.</p>]]></stepTextTip>
			<stepScreen>content/showImages/students/viewLibrary1.png</stepScreen>
			<stepHotspot>10,154,94,165</stepHotspot>	
		</step>
		<step>
			<stepTitle>Library</stepTitle>
			<stepTextTip><![CDATA[<p>Once you've clicked on the course name, the page will automatically open on the <b>Library</b>.</p>]]></stepTextTip>
			<stepScreen>content/showImages/students/viewLibrary2.png</stepScreen>
			<stepHotspot>150,160,545,179</stepHotspot>	
		</step>
		<step>
			<stepTitle>Open Units and Chapters</stepTitle>
			<stepTextTip><![CDATA[Use the <b>+</b> icons to open the tree structure and view the units and chapters.</p>]]></stepTextTip>
			<stepScreen>content/showImages/students/viewLibrary3.png</stepScreen>
			<stepHotspot>159,191,168,198</stepHotspot>
		</step>
		<step>
			<stepTitle>Resource Titles</stepTitle>
			<stepTextTip><![CDATA[Click on the resource titles to access the various resources.]]></stepTextTip>
			<stepScreen>content/showImages/students/viewLibrary4.png</stepScreen>
			<stepHotspot>171,244,325,259</stepHotspot>
		</step>
		<step>
			<stepTitle>Resources launch</stepTitle>
			<stepTextTip><![CDATA[Your resources will then launch in a new window.]]></stepTextTip>
			<stepScreen>content/showImages/students/viewLibrary5.png</stepScreen>
			<stepHotspot></stepHotspot>
		</step>
	</steps>	
 </topic>